# i3blocks configuration file
#
# The i3blocks man page describes the usage of the binary,
# and its website describes the configuration:
#
#     https://vivien.github.io/i3blocks


# Global properties
separator=true
separator_block_width=15

# Time block
[time]
command=date '+%H:%M'
interval=60
label=🕒

# Date block
[date]
command=date '+%d %B %Y'
interval=3600
label=

[battery]
command=acpi -b | awk '{print $4 " (" $3 ") " $5}' | sed 's/,//g'
interval=30
label=🔋 

[brightness]
label=☀️
command=brightnessctl | awk -F '[()]' '/Current brightness/ {print $2}'
interval=1
min_width=30
align=center

[brightness_zero]
full_text=🌛
command=brightnessctl set 1% > /dev/null
interval=0
min_width=30
align=center

[volume]
label= 
command=amixer get Master | awk -F'[][]' '/%/ {print int($2) "%"}'
interval=1
min_width=30
align=center

[volume_up]
full_text=🔊 +
command=amixer set Master 10%+ > /dev/null
interval=0
align=center

[volume_down]
full_text=🔉-
command=amixer set Master 10%- > /dev/null
interval=0
align=center

[volume_mute]
full_text=
command=amixer set Master toggle > /dev/null; amixer get Master | awk -F'[][]' '/%/ {if ($6 == "off") print "🔈MUTED"; else print "🔈LOUD"}'
interval=once
align=center

#[mic_mute]
#full_text=🎤
#command=wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle; wpctl get-volume @DEFAULT_AUDIO_SOURCE@ | awk '{if ($3 == "[MUTED]") print "🎤 MUTED"; else print "🎤 OPEN"}'
#interval=once
#align=center

[language]
full_text=us
command=current_layout=$(setxkbmap -query | awk '/layout/{print $2}'); if [ "$current_layout" = "us" ]; then setxkbmap ro std; else setxkbmap us; fi; new_layout=$(setxkbmap -query | awk '/layout/{print $2}'); echo $new_layout;
interval=none

[bluetooth]
full_text=bt
command=bluedevil-wizard
interval=none

[screenshot]
full_text=screenshot
command=scrot "/home/axbg/screenshots/%Y-%m-%d_%H-%M-%S_screenshot.png" ; notify-send "Screenshot taken in ~/screenshots"
interval=0

